<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-semibold text-space-star mb-6">Create an Account</h2>
  
  <% if @user.errors.any? %>
    <div class="bg-red-900/30 border border-red-800 rounded-lg p-4 mb-6">
      <h3 class="text-red-400 font-medium mb-2">The following errors prevented registration:</h3>
      <ul class="list-disc list-inside text-red-300">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with(model: @user, local: true, class: "space-y-6") do |form| %>
    <div>
      <%= form.label :email, class: "block text-gray-300 mb-1" %>
      <%= form.email_field :email, class: "w-full bg-space-blue/30 border border-space-purple/50 rounded-lg p-2 text-white" %>
    </div>
    
    <div>
      <%= form.label :username, class: "block text-gray-300 mb-1" %>
      <%= form.text_field :username, class: "w-full bg-space-blue/30 border border-space-purple/50 rounded-lg p-2 text-white" %>
    </div>
    
    <div>
      <%= form.label :password, class: "block text-gray-300 mb-1" %>
      <%= form.password_field :password, class: "w-full bg-space-blue/30 border border-space-purple/50 rounded-lg p-2 text-white" %>
    </div>
    
    <div>
      <%= form.label :password_confirmation, class: "block text-gray-300 mb-1" %>
      <%= form.password_field :password_confirmation, class: "w-full bg-space-blue/30 border border-space-purple/50 rounded-lg p-2 text-white" %>
    </div>
    
    <div>
      <%= form.submit "Register", class: "w-full bg-space-nebula hover:bg-space-purple text-white font-medium py-2 px-4 rounded-lg transition" %>
    </div>
  <% end %>
  
  <div class="mt-4 text-center text-gray-400">
    Already have an account? <%= link_to "Log in", "#", class: "text-space-highlight hover:text-space-accent" %>
  </div>
</div>